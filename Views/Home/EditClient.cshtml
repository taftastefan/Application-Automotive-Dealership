@model DealershipApp.Controllers.Client

<div class="container">
    <h2>Editează Client</h2>
    <form method="post" action="/Home/EditClient">
        <input type="hidden" name="IDClient" value="@Model.IDClient">
        <label for="nume">Nume:</label>
        <input type="text" id="nume" name="Nume" value="@Model.Nume" required><br>
        <label for="prenume">Prenume:</label>
        <input type="text" id="prenume" name="Prenume" value="@Model.Prenume" required><br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="Email" value="@Model.Email" required><br>
        <label for="telefon">Telefon:</label>
        <input type="text" id="telefon" name="Telefon" value="@Model.Telefon" required><br>
        <button type="submit">Salvează</button>
    </form>
</div>
