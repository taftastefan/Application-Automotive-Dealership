@model DealershipApp.Controllers.Car
@{
    var models = ViewBag.Models as List<DealershipApp.Controllers.Model>;
}

<div class="container">
    <h2>Editează Mașină</h2>
    <form method="post" action="/Home/EditCar">
        <input type="hidden" name="IDMasina" value="@Model.IDMasina">

        <label for="AnFabricatie">An Fabricație:</label>
        <input type="number" id="AnFabricatie" name="AnFabricatie" value="@Model.AnFabricatie" required><br>

        <label for="Kilometraj">Kilometraj:</label>
        <input type="number" id="Kilometraj" name="Kilometraj" value="@Model.Kilometraj" required><br>

        <label for="Pret">Preț:</label>
        <input type="text" id="Pret" name="Pret" value="@Model.Pret" required><br>

        <label for="Stare">Stare:</label>
        <input type="text" id="Stare" name="Stare" value="@Model.Stare" required><br>

        <label for="selectedModel">Model:</label>
        <select id="selectedModel" name="selectedModel" required>
            <option value="">Selectează un model</option>
            @if (models != null)
            {
                foreach (var item in models)
                {
                    if (item.Denumire == Model.Model)
                    {
                        <option value="@item.Denumire" selected>@item.Denumire</option>
                    }
                    else
                    {
                        <option value="@item.Denumire">@item.Denumire</option>
                    }
                }
            }
        </select><br>

        <button type="submit">Salvează</button>
    </form>
</div>
