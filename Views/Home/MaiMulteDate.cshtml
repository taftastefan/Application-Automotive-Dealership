@{
    ViewBag.Title = "Mai Multe Date";
}

<div class="container">

    <h3>1. Mașinile cele mai scumpe pentru fiecare marcă</h3>
    <table>
        <tr>
            <th>Marcă</th>
            <th>Model</th>
            <th>Preț</th>
        </tr>
        @foreach (var item in ViewBag.MasiniScumpePerBrand)
        {
            <tr>
                <td>@item.Marca</td>
                <td>@item.Model</td>
                <td>@item.Pret</td>
            </tr>
        }
    </table>

    <h3>2. Clienții cu cele mai multe mașini cumpărate</h3>
    <table>
        <tr>
            <th>Client</th>
            <th>Total Vânzări</th>
        </tr>
        @foreach (var item in ViewBag.TopClients)
        {
            <tr>
                <td>@item.Client</td>
                <td>@item.TotalVanzari</td>
            </tr>
        }
    </table>

    <h3>3. Vânzările pentru mașinile care depășesc un kilometraj</h3>
    <form method="get" action="/Home/MaiMulteDate">
        <label for="kilometraj">Introduceți kilometraj:</label>
        <input type="number" id="kilometraj" name="kilometraj" value="@ViewBag.Kilometraj" />
        <button type="submit">Caută</button>
    </form>
    <p>Filtru: Kilometraj mai mare de @ViewBag.Kilometraj km</p>
    <table>
        <tr>
            <th>ID Vânzare</th>
            <th>Client</th>
            <th>Model</th>
            <th>Kilometraj</th>
            <th>Preț Final</th>
        </tr>
        @foreach (var item in ViewBag.VanzariKilometraj)
        {
            <tr>
                <td>@item.IDVanzare</td>
                <td>@item.Client</td>
                <td>@item.Model</td>
                <td>@item.Kilometraj</td>
                <td>@item.PretFinal</td>
            </tr>
        }
    </table>
    <button class="return-button" onclick="window.location.href='/Home/MainMenu'">Return to Main Menu</button>
</div>
